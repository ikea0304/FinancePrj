@model IEnumerable<Finance.DBset.Cost>

@{
    ViewBag.Title = "總表";
}
<p style="margin-top:20px; color:blue; font-size:20px;">目前總花費: @ViewBag.totaCost</p>
<button onclick="location.href='@Url.Action("Create", "Home")';return false;" class="btn btn-info">新增</button>

<center>
    <div style="width:1000px;text-align:left;">
        <table class="table table-striped gridStyle" style="margin-bottom:0px;">
            <colgroup>
                <col style="width: 200px;" />
                <col style="width: 200px;" />
                <col style="width: 200px;" />
                <col style="width: 200px;" />
                <col />
            </colgroup>
            <thead>
                <tr>
                    <th style="text-align:center;">日期</th>
                    <th style="text-align:center;">分類</th>
                    <th style="text-align:center;">名稱</th>
                    <th style="text-align:center;">金額</th>
                    <th style="text-align:center;"></th>
                </tr>
            </thead>
        </table>
        <div style="height:450px;">
            <table class="table table-striped gridStyle" style="margin-top:0px;">
                <colgroup>
                    <col style="width: 200px;" />
                    <col style="width: 200px;" />
                    <col style="width: 200px;" />
                    <col style="width: 200px;" />
                    <col />
                </colgroup>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center;">@item.date</td>
                            <td style="text-align:center;">@item.classification</td>
                            <td style="text-align:center;">@item.name</td>
                            <td style="text-align:center;">@item.cost</td>
                            <td>
                                @Html.ActionLink("編輯", "Update", new { ID = item.ID }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("刪除", "Delete", new { ID = item.ID, onclick = "return confirm('確定要刪除嗎?');" }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</center>

